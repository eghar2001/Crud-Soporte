
ScreenManager:
   Screen:
      on_pre_enter: app.actualizar_productos()
      name: "producto_list"

      GridLayout:
         cols:2
         RecycleView:
            id: recycle_productos
            data : [{"text":producto.get_text(), "id":"editar-"+str(producto.id)} for producto in app.buscar_productos()]
            viewclass:"Button"
            RecycleBoxLayout:
               orientation: "vertical"
               default_size: None, dp(56)
               default_size_hint: 1, None
               size_hint_y: None
               height: self.minimum_height


         Button:
            text: "Agregar producto"
            on_press:
               root.current = "producto_agregar"
               root.transition.direction = "left"

          #PREGUNTAR COMO SE MUESTRA UNA LISTA

   Screen:
      name: "producto_agregar"
      GridLayout:
         rows: 6
         cols:2

         Label:
            text: "Ingrese nombre"
         TextInput:
            id: nombre

         Label:
            text: "Ingrese una cantidad"
         TextInput:
            text : "0"
            id: cantidad

         Label:
            text: "Ingrese un precio"
         TextInput:
            text: "0"
            id: precio



         Button:
            text: "Borrar"
            on_press: app.borrar()
         Button:
            text: "Enviar"
            on_press:
               app.enviar()

         Button:
            text: "Ir a Lista"
            col_default_width: 2
            col_force_default: True
            on_press:
               app.cargar_lista()
               root.current = "producto_list"
               root.transition.direction = "right"


